<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="connectionPool" class="edu.sm.frame.ConnectionPool" factory-method="create"/>


    <bean id="managerDao" class="edu.sm.dao.ManagerDao"></bean>
    <bean id="totalOrderDao" class="edu.sm.dao.TotalOrderDao"></bean>

    <bean id="totalOrderService" class="edu.sm.service.TotalOrderService">
        <property name="dao" ref="totalOrderDao"/>
        <property name="cp" ref="connectionPool"/>
    </bean>

    <bean id="adminService" class ="edu.sm.service.AdminService">
        <property name="dao" ref="managerDao"/>
        <property name="cp" ref="connectionPool"/>
    </bean>

</beans>